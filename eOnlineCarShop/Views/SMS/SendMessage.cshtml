<style>
    .content {
        background-color: #323232;
        border-radius: 20px 20px 20px 20px;
    }
</style>
<div class="content">
    <div class="container mx-auto">
        <form method="post">
            <div class="form-group text-center font-weight-bold w-50 mx-auto" style="padding-top:5%">
                <label>Admins : </label>
                <select asp-for="@Model.PhoneNumber" asp-items="@Model.To"></select>
            </div>
            <div class="form-group text-center font-weight-bold w-50 mx-auto">
                <label asp-for="@Model.ContentMsg"></label>
                <input asp-for="@Model.ContentMsg" class="form-control" />
                <span asp-validation-for="@Model.ContentMsg" class="text-danger"></span>
            </div>
            <div class="mx-auto text-center">
                <button class="btn btn-dark" style="color: #14FFEC;" type="submit" asp-controller="SMS" asp-action="SendMessage">Send SMS</button>
            </div>
        </form>
    </div>
</div>