@using X.PagedList;
@using X.PagedList.Mvc.Core;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
@model IPagedList<UserVM>
<style>
    #content {
        background: #323232;
        text-align: center;
        margin-top: 10%;
        border-radius: 20px 20px 20px 20px;
    }
</style>
<div id="content">
    <h1 class="mt-4 text-light">Employee List</h1>
  
    <table class="table mt-5">
        <thead style="background:#0D7377; color:white;">
            <tr>
                <th>Name</th>
                <th>Surname</th>
                <th>Email</th>
                @*<th>Email</th>
        <th>Product</th>
        <th>Size</th>*@
                <th>Reports</th>
                <th>
                </th>
                <th>
                </th>
                <th>
                </th>
            </tr>
        </thead>
        <tbody style="background:#323232; color:#14FFEC;">
            @foreach (var e in Model)
            {
            <tr>
                <td>@e.FirstName</td>
                <td>@e.LastName</td>
                <td>@e.Email</td>
                <td>  <a class="btn btn-dark" style="color:#14FFEC;" asp-controller="ReportAdmin" asp-action="Index" asp-route-userid="@e.Id">Report</a></td>
                <td><a class="btn btn-dark" style="color:#14FFEC;" asp-controller="Administrator" asp-action="EmployeeDetails" asp-route-id="@e.Id">Details</a></td>
                @*<td><a class="btn btn-warning" asp-controller="Administrator" asp-action="EmployeeEdit" asp-route-id="@e.Id">Edit</a></td>*@
                @* <td><a href="/Administrator/EmployeeEdit"><i class="fa fa-cog" aria-hidden="true"></i>Edit</a></td>*@
                <td> <a class="btn btn-dark" style="color:#14FFEC;" asp-controller="Administrator" asp-action="EmployeeEdit" asp-route-id="@e.Id">Edit</a></td>
                <td> <a class="btn btn-dark" style="color:#14FFEC;" asp-controller="Administrator" asp-action="EmployeeRemove" asp-route-id="@e.Id">Remove</a></td>

            </tr>
            }
        </tbody>
    </table>
    <div id="paging" style="text-align:start;display:flex;flex-direction:row">

        @Html.PagedListPager(Model, page => Url.Action("EmployeeList", new { page }))
    </div>
    <a class="btn btn-dark" style="color:#14FFEC;" asp-controller="Administrator" asp-action="AdminHome">Back to homepage</a>
    <a class="btn btn-dark" style="color:#14FFEC;" asp-controller="Administrator" asp-action="EmployeeAdd">Add new employee</a>
</div>

