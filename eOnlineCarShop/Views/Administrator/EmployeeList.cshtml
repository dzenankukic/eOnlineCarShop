@using X.PagedList;
@using X.PagedList.Mvc.Core;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
@model IPagedList<UserVM>

<div id="content">
    <h1>Employee List</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Surname</th>
                <th>Email</th>
                @*<th>Email</th>
                    <th>Product</th>
                    <th>Size</th>*@
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var e in Model)
            {
            <tr>
                <td>@e.FirstName</td>
                <td>@e.LastName</td>
                <td>@e.Email</td>
                <td><a class="btn btn-warning" asp-controller="Administrator" asp-action="EmployeeDetails" asp-route-id="@e.Id">Details</a></td>
                @*<td><a class="btn btn-warning" asp-controller="Administrator" asp-action="EmployeeEdit" asp-route-id="@e.Id">Edit</a></td>*@
               @* <td><a href="/Administrator/EmployeeEdit"><i class="fa fa-cog" aria-hidden="true"></i>Edit</a></td>*@
                <td> <a class="btn btn-warning" asp-controller="Administrator" asp-action="EmployeeEdit" asp-route-id="@e.Id">Edit</a></td>
            </tr>
            }
        </tbody>
    </table>
    <div id="paging" style="text-align:start;display:flex;flex-direction:row">

        @Html.PagedListPager(Model, page => Url.Action("EmployeeList", new { page }))
    </div>
    <a class="btn btn-warning" asp-controller="Administrator" asp-action="AdminHome">Back to homepage</a>
    <a class="btn btn-warning" asp-controller="Administrator" asp-action="EmployeeAdd">Add new employee</a>
</div>

