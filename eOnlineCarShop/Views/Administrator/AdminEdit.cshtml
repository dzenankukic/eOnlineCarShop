@{
}
@model UserEditVM
    <style>
        .content {
            background-color: #323232;
            border-radius: 20px 20px 20px 20px;
        }
    </style>
    <div class="content">
        <div class="row">
            <div class="col-md-2">
            </div>
            <div class="col-md-8">
                <form id="editforma" method="post" enctype="multipart/form-data" class="">
                    <h3 class="font-weight-bold text-center">Edit your profile</h3>

                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="form-group text-center font-weight-bold">
                        <input asp-for="Id" hidden />
                        <label>FirstName</label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group text-center font-weight-bold">
                        <label>LastName</label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group text-center font-weight-bold">
                        <label>BirthDate</label>
                        <input asp-for="BirthDate" class="form-control" />
                        <span asp-validation-for="BirthDate" class="text-danger"></span>
                    </div>
                    <div class="form-group text-center font-weight-bold">
                        <label>Gender : </label>
                        <select asp-for="GenderID" asp-items="@Model.Gender"></select>
                    </div>
                    <div class="form-group text-center font-weight-bold">
                        <label>City : </label>
                        <select asp-for="CityID" asp-items="@Model.City"></select>
                    </div>
                    <div class="form-group text-center font-weight-bold">
                        <label>PhoneNumber</label>
                        <input asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="mx-auto text-center">
                        <button class="btn btn-dark" style="color: #14FFEC;">Save</button>
                </div>
                        </form>
            </div>
            <div class="col-md-2">
            </div>
        </div>
    </div>