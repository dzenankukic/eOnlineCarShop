@{
    ViewData["Title"] = "AdminHome";
}
<style>
    .wrapper {
        display: flex;
        box-sizing: border-box;
        height: 650px;
        border-radius: 20px 20px 20px 20px;
    }
    .left1 {
        width:30%;
        border-radius: 0px 27px 0px 0px;
        background-color: #0D7377;
        height: 74%;
        margin-top: 15%;
    }
    .right1 {
        width: 100%;
        background-color: #323232;
    }
</style>
<div class="wrapper" style="background:#323232;">
    <div class="left1">
        <h5 class="mt-3 text-center">Admin options:</h5>
        <ul style="text-decoration:none;justify-items:center;">
            <li class="mt-3">
                <a class="btn btn-dark" style="color: #14FFEC;" asp-controller="Administrator" asp-action="EmployeeList">Employee</a>
            </li>
            <li class="mt-3">
                <a class="btn btn-dark" style="color: #14FFEC;" asp-controller="Administrator" asp-action="AdminEdit">Edit your profil</a>
            </li>
            <li class="mt-3">
                <a class="btn btn-dark" style="color: #14FFEC;" asp-controller="Administrator" asp-action="EmployeeAdd">Add new employee</a>
            </li>
            <li class="mt-3">
                <a class="btn btn-dark" style="color: #14FFEC;" asp-controller="SMS" asp-action="SendMessage">Send message to admin</a>
            </li>
        </ul>
     </div>
    <div class="right1">
        <h2 class="mt-5" style="color:#14FFEC;">Wellcome Admin</h2>
        <p></p>
   </div>
  
    @*<a class="btn btn-danger " asp-controller="Administrator" asp-action="ClientList">Client</a>*@

</div>