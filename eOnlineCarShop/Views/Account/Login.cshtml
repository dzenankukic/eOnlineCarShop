@{
}
@model LoginVM
<style>
    .content{
        padding-bottom:10%;
    }
</style>
<div class="content" style="background:#323232;border-radius:20px;">
    <div class="col-md-12 mt-4">
        <form method="post" class="mt-3 w-75 mx-auto">
            <h3 class="font-weight-bold text-center">LOGIN</h3>

            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group text-center font-weight-bold">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group text-center font-weight-bold">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group text-center font-weight-bold">
                <div class="custom-checkbox">
                    <label asp-for="RememberMe">
                        <input asp-for="RememberMe" />
                        @Html.DisplayNameFor(m => m.RememberMe)
                    </label>
                </div>
            </div>
            <div class="mx-auto text-center">
                <button type="submit" class="btn btn-dark" style="color: #14FFEC;">Login</button>
       </div>
                </form>

    </div>


</div>