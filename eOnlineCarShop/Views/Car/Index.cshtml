@using eOnlineCarShop.ViewModels
@model List<ShowCarsVM>
@{
    ViewData["Title"] = "Index";
}

<h1>Vozila u ponudi</h1>

<hr />
@if (Model.Any())
{
    @foreach (var item in Model)
    {
        <div class="card mb-3">
            <div class="card-body">

                <img style="width: 20rem; height: auto;" src="@item.images.FirstOrDefault()" alt="slika" />

                <h5 class="card-title" ;>@item.Brand @item.CarModel </h5>
                <span>
                    CMM: @item.Ccm
                    Fuel: @item.Fuel
                    Transmission: @item.Transmission<br />
                    Colo: @item.Color<br />
                    Drive type: @item.DriveType<br />
                    Vehicle type: @item.VehicleType<br />
                    Seates: @item.NumberOfSeats<br />
                    Dors: @item.NumberOfDors<br />
                    Gears: @item.NumberOfGears<br />
                    Kilometre: @item.Kilometre<br />
                    Date: @item.DateOfManufacture<br />
                </span>
                <a class="btn btn-primary" asp-controller="Car" asp-action="PregledVozila" asp-route-carID="@item.CarId">Pregled</a>
                <a class="btn btn-primary" asp-controller="Shop" asp-action="CarDetails" asp-route-id="@item.CarId ">Details</a>
            </div>
        </div>
    }
}

<a class="nav-link text-dark" asp-area="" asp-controller="Car" asp-action="AddCar">Dodaj vozilo</a>
<a class="btn btn-danger" asp-area="" asp-controller="Shop" asp-action="ShoppingCart">View My Shopping Cart</a>